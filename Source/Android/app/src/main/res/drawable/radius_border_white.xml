<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <shape>
            <corners
                android:radius="20dp">
            </corners>
            <solid android:color="@color/colorPrimary"  />

            <stroke
                android:width="1dp"
                android:color="@color/white" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <corners
                android:radius="20dp">
            </corners>
            <solid android:color="@color/colorPrimary" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
        </shape>
    </item>

    <item>
        <shape>
            <corners
                android:radius="20dp">
            </corners>
            <solid android:color="@color/text_top_blue_button"></solid>
            <stroke
                android:width="1dp"
                android:color="@color/white" />
        </shape>
    </item>
</selector>
