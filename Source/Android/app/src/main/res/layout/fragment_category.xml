<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_home"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_weight="1">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/box_margin_left_right"
            android:layout_marginRight="@dimen/box_margin_left_right"
            android:background="@drawable/radius_box_half"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_height="@dimen/content_top_height"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_calendar_from"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_calendar">
                </ImageView>

                <Button
                    android:id="@+id/btn_from"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="From"
                    android:textAllCaps="false"
                    android:background="@drawable/radius_replenish_button">
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center|right"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_calendar_to"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_calendar">
                </ImageView>

                <Button
                    android:id="@+id/btn_to"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="To"
                    android:textAllCaps="false"
                    android:background="@drawable/radius_replenish_button">
                </Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/graph_content_height"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/box_margin_left_right"
            android:layout_marginRight="@dimen/box_margin_left_right"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/radius_box">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/content_top_height"
                android:background="@drawable/radius_category"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_previous"
                    android:layout_marginTop="3dp"
                    android:layout_width="@dimen/category_arrow_size"
                    android:layout_height="@dimen/category_arrow_size"
                    android:src="@drawable/left_arrow">
                </ImageView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_day"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/category_button_space"
                        android:layout_marginRight="@dimen/category_button_space"
                        android:layout_height="@dimen/category_button_height"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="BUTTON"
                        android:textColor="@color/white"
                        android:background="@drawable/radius_category_button">
                    </Button>

                    <Button
                        android:id="@+id/btn_week"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/category_button_space"
                        android:layout_marginRight="@dimen/category_button_space"
                        android:layout_height="@dimen/category_button_height"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="BUTTON"
                        android:textColor="@color/white"
                        android:background="@drawable/radius_category_button">
                    </Button>

                    <Button
                        android:id="@+id/btn_month"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/category_button_space"
                        android:layout_marginRight="@dimen/category_button_space"
                        android:layout_height="@dimen/category_button_height"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="BUTTON"
                        android:textColor="@color/white"
                        android:background="@drawable/radius_category_button">
                    </Button>

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_next"
                    android:layout_marginTop="3dp"
                    android:layout_width="@dimen/category_arrow_size"
                    android:layout_height="@dimen/category_arrow_size"
                    android:src="@drawable/right_arrow">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_graph"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/box_margin_left_right"
            android:layout_marginRight="@dimen/box_margin_left_right"
            android:background="@drawable/radius_box">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_sale_item_height"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Premium Wash"
                        android:textColor="@color/black"
                        android:textSize="@dimen/button_text_size">
                    </TextView>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray06" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/txt_premium_count"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/monsoon"
                        android:gravity="center"
                        android:text="20">

                    </TextView>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@color/gray06" />

                    <TextView
                        android:id="@+id/txt_premium_amount"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textColor="@color/monsoon"
                        android:gravity="center"
                        android:text="21,000.00">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray06" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_sale_item_height"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Regular Wash"
                        android:textColor="@color/black"
                        android:textSize="@dimen/button_text_size">
                    </TextView>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray06" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/txt_regular_count"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/monsoon"
                        android:gravity="center"
                        android:text="20">

                    </TextView>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@color/gray06" />

                    <TextView
                        android:id="@+id/txt_regular_amount"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textColor="@color/monsoon"
                        android:gravity="center"
                        android:text="21,000.00">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray06" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_sale_item_height"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Quick Wash"
                        android:textColor="@color/black"
                        android:textSize="@dimen/button_text_size">
                    </TextView>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray06" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/txt_quick_count"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/monsoon"
                        android:gravity="center"
                        android:text="20">

                    </TextView>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@color/gray06" />

                    <TextView
                        android:id="@+id/txt_quick_amount"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textColor="@color/monsoon"
                        android:gravity="center"
                        android:text="21,000.00">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray06" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_sale_item_height"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Premium Wash"
                        android:textColor="@color/black"
                        android:textSize="@dimen/button_text_size">
                    </TextView>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray06" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/txt_drop_count"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/monsoon"
                        android:gravity="center"
                        android:text="20">

                    </TextView>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@color/gray06" />

                    <TextView
                        android:id="@+id/txt_drop_amount"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textColor="@color/monsoon"
                        android:gravity="center"
                        android:text="21,000.00">
                    </TextView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>