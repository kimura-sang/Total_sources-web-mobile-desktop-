<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

    <Button
        android:id="@+id/btn_name"
        android:layout_width="100dp"
        android:layout_marginLeft="@dimen/category_button_space"
        android:layout_marginRight="@dimen/category_button_space"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="@dimen/category_button_height"
        android:layout_weight="1"
        android:textSize="12dp"
        android:text="Category"
        android:textColor="@color/white"
        android:background="@drawable/radius_category_button">
    </Button>

</LinearLayout>