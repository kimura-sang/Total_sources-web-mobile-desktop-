<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/MyTheme"
    style="@style/MatchWrap"
    android:background="@drawable/item_pressed"
    android:layout_height="@dimen/sale_item_height"
    android:orientation="horizontal"
    android:layout_gravity="left|center"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="@dimen/offer_detail_no_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/monsoon"
            android:textSize="@dimen/sub_content_font_size">
        </TextView>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/gray02" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:text="ARIEL GREEN"
            android:textColor="@color/monsoon"
            android:textSize="@dimen/sub_content_font_size">
        </TextView>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/gray02" />

    <LinearLayout
        android:layout_width="@dimen/offer_detail_count_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/monsoon"
            android:textSize="@dimen/sub_content_font_size">
        </TextView>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/gray02" />
    <LinearLayout
        android:layout_width="@dimen/offer_detail_unit_width"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:textColor="@color/monsoon"
            android:gravity="center_vertical"
            android:textSize="@dimen/sub_content_font_size"
            android:text="pc/s">
        </TextView>
    </LinearLayout>

</LinearLayout>