<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/MyTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap"
    android:background="@drawable/item_pressed"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:layout_gravity="left|center"
    android:gravity="center_vertical">

    <FrameLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:civ_border_width="0dp"
            app:civ_border_color="@color/text_top_blue_button"
            android:src="@drawable/staff_user" />
        <View
            android:id="@+id/view_type"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/radius_circle">
        </View>


    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="3">

        <TextView
            android:id="@+id/txt_staff_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maria Solidum"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_marginLeft="10dp">
        </TextView>
        <TextView
            android:id="@+id/txt_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Staff"
            android:textColor="@color/monsoon"
            android:textSize="12dp"
            android:layout_marginLeft="10dp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:background="@drawable/half_oval_green"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_time_in"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="9: 01 AM"
            android:textColor="@color/black"
            android:textSize="@dimen/staff_item_font_size">
        </TextView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:background="@drawable/half_oval_orange"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_time_out"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5:00 PM"
            android:textColor="@color/black"
            android:textSize="@dimen/staff_item_font_size">
        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:src="@drawable/phone_icon">
    </ImageView>

    <ImageView
        android:id="@+id/img_message"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:src="@drawable/message_icon">
    </ImageView>

    <TextView
        android:id="@+id/txt_date_time"
        android:layout_marginRight="0dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/radius_border_primary_oval_box"
        android:text="1"
        android:textSize="12dp"
        android:gravity="center">
    </TextView>
</LinearLayout>