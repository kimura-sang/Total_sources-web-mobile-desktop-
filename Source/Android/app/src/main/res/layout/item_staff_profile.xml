<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/MyTheme"
    style="@style/MatchWrap"
    android:background="@drawable/item_pressed"
    android:layout_height="@dimen/staff_profile_item_height"
    android:orientation="horizontal"
    android:layout_gravity="left|center"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Jan 1 Wed"
            android:textColor="@color/black"
            android:textSize="@dimen/staff_item_font_size">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:background="@drawable/half_oval_green"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_time_in"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="9: 01 AM"
            android:textColor="@color/black"
            android:textSize="@dimen/staff_item_font_size">
        </TextView>
    </LinearLayout>
<!--        <View-->
<!--            android:layout_width="1dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@color/black">-->
<!--        </View>-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:background="@drawable/half_oval_orange"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_time_out"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5:00 PM"
            android:textColor="@color/black"
            android:textSize="@dimen/staff_item_font_size">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_no"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/radius_border_primary_oval_box"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/staff_item_font_size">
        </TextView>
    </LinearLayout>

</LinearLayout>