<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/MyTheme"
    style="@style/MatchWrap"
    android:background="@drawable/item_pressed"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:layout_gravity="left|center"
    android:gravity="center_vertical">


        <ImageView
            android:id="@+id/img_transaction"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/staff_user" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maria Solidum"
            android:textColor="@color/black"
            android:textSize="16dp">
        </TextView>
        <TextView
            android:id="@+id/txt_operation_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+63 0123456789"
            android:textColor="@color/monsoon"
            android:textSize="12dp">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="7832.10"
        android:gravity="right">
    </TextView>

</LinearLayout>