<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_top_left"
            android:layout_width="@dimen/top_image_icon_size"
            android:layout_height="@dimen/top_image_icon_size"
            android:src="@drawable/icon_back_blue">
        </ImageView>

        <TextView
            android:id="@+id/txt_top_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Page Title"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold">
        </TextView>

        <ImageView
            android:id="@+id/img_top_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:clickable="false">
        </ImageView>

    </LinearLayout>
</LinearLayout>